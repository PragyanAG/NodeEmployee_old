<script type="text/javascript">





	$(document).ready(function() {
	
	 sortSelect(document.getElementById("company"), 'text', 'asc');
	 sortSelect(document.getElementById("vessel"), 'text', 'asc');
	 sortSelect(document.getElementById("jobcategory"), 'text', 'asc');
	
	$jobcategory = $('#jobcategory');
    $jobtype = $('#jobtype');
	
	$jobcategory.change(function() {
    
    $jobtype.html(''); // Clear existing options in second dropdown
    var select = document.getElementById("jobtype");
	var value = document.getElementById("jobcategory").value;
	
	<% for(var i=0; i < jobtype.length; i++){ %>
	     if(value == '<%= jobtype[i].jobcategory_id %>'){
            var el = document.createElement("option");
            el.textContent = '<%= jobtype[i].jobtype %>';
            el.value = '<%= jobtype[i]._id %>';
            select.appendChild(el);
	     }
    <%}%> 
	sortSelect(document.getElementById("jobtype"), 'text', 'asc');
    }).change();
	
    $('#createjobassignment').bootstrapValidator({
        container: '#messages',
        feedbackIcons: {
            valid: 'glyphicon glyphicon-ok',
            invalid: 'glyphicon glyphicon-remove',
            validating: 'glyphicon glyphicon-refresh'
        },
        fields: {
           
			
        }
    });
	
	
	$destfrom = $('#destfrom');
    $airdestfrom = $('#airdestfrom');
	
	$destfrom.change(function() {
    
    $airdestfrom.html(''); // Clear existing options in second dropdown
    var select = document.getElementById("airdestfrom");
	var value = document.getElementById("destfrom").value;
	
	
	
	<% for(var i=0; i < airport.objAirport.length; i++){ %>
	
	     if(value == '<%= airport.objAirport[i].country %>' && '<%= airport.objAirport[i].type %>' == "Airports" 
		 && '<%= airport.objAirport[i].name %>' != ""){
		 
            var el = document.createElement("option");
            el.textContent = '<%= airport.objAirport[i].name %>';
            el.value = '<%= airport.objAirport[i].name %>';
            select.appendChild(el);
	     }
		 
		
    <%}%> 
	
	sortSelect(document.getElementById("airdestfrom"), 'text', 'asc');
    }).change();	
	
	
	$destto = $('#destto');
    $airdestto = $('#airdestto');
	
	$destto.change(function() {
    
    $airdestto.html(''); // Clear existing options in second dropdown
    var select = document.getElementById("airdestto");
	var value = document.getElementById("destto").value;
	
	
	
	<% for(var i=0; i < airport.objAirport.length; i++){ %>
	     if(value == '<%= airport.objAirport[i].country %>' && '<%= airport.objAirport[i].type %>' == "Airports" 
		 && '<%= airport.objAirport[i].name %>' != ""){
		 
            var el = document.createElement("option");
            el.textContent = '<%= airport.objAirport[i].name %>';
            el.value = '<%= airport.objAirport[i].name %>';
            select.appendChild(el);
	     }
		
    <%}%> 
	sortSelect(document.getElementById("airdestto"), 'text', 'asc');
    }).change();	
});

var sortSelect = function (select, attr, order) {
    if(attr === 'text'){
        if(order === 'asc'){
            $(select).html($(select).children('option').sort(function (x, y) {
                return $(x).text().toUpperCase() < $(y).text().toUpperCase() ? -1 : 1;
            }));
            $(select).get(0).selectedIndex = 0;
            
        }// end asc
        if(order === 'desc'){
            $(select).html($(select).children('option').sort(function (y, x) {
                return $(x).text().toUpperCase() < $(y).text().toUpperCase() ? -1 : 1;
            }));
            $(select).get(0).selectedIndex = 0;
            e.preventDefault();
        }// end desc
    }

};
   

</script> 
