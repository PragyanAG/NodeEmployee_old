			 trHTML +="<td>" + item.visatype + "</td>";
			 
			 if(item.filename != ""){
			 trHTML +='<td><a href=' + item.filepath + ' target ="_blank">' + item.filename + '</a></td>';
			 }
			 else{trHTML += "<td></td>";}
			 trHTML +="<td>";
