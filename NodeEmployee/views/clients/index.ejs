     <div class="main-panel">
           <nav class="navbar navbar-default navbar-fixed">
              <div class="container-fluid">
                <div  align="right">
                   <a href="">Account</a>
                      &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                   <a href="#">Log out</a>
                </div>
              </div>
	       </nav>
           
			
			
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h5><a href="/clients/create">Create Client</a></h5>
                                 <h5>Client List</h5>
                                
                            </div>
                            <div class="content table-responsive table-full-width">
							 <% if(clients.length>0) { %>
                                <table id="myTable" class="table table-striped" > 
                                    <thead>
									<tr>
                                    <th>Company Name</th>
                                    <th>Country</th>
									<th>City</th>
									<th>Office Ph.No</th>
									<th>Website</th>
									<th>Status</th>
                                    </tr>
                                </thead>
                               <tbody>
			
			                    <% for(var i=0; i<clients.length;i++) { %>
                                   <tr>
                                     <td><a href="/clients/show/<%= clients[i]._id%>"><%= clients[i].companyname%></a></td>
                                     <td><%= clients[i].country%></td>
									 <td><%= clients[i].city%></td>
									 <td><%= clients[i].officeno%></td>
									 <td><a target="_blank" href ="http://<%= clients[i].website%>"><%= clients[i].website%></a></td>
									 <td><%= clients[i].status%></td>
								    </tr>
                                <% } %>
							   </tbody>
                          </table>
                             <% } else { %>
                         <div class="header">No Client found.</div>
                               <% } %>
                         </div>
			
			
			
                         </div>
                        </div>
                    </div>


                   


    </div>
</div>
